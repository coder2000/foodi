          .mt-5.sm:mt-8.sm:flex.sm:justify-center.lg:justify-start
            .rounded-md.shadow
              = link_to "Get Started", "#", class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-foodi-600 hover:bg-foodi-700 md:py-4 md:text-lg md:px-10"
