                    = fa_icon "bars", weight: "fa-solid", class: "h-6 w-6 fa-xl fa-fw"
            .hidden.md:block.md:ml-10.md:pr-4.md:space-x-8
              = link_to "Features", "#", class: "font-medium text-gray-500 hover:text-gray-900"
              = link_to "Pricing", "#", class: "font-medium text-gray-500 hover:text-gray-900"
              = link_to "Sign in", new_user_session_path, class: "font-medium text-foodi-600 hover:text-foodi-500"
        .absolute.z-10.top-0.inset-x-0.p-2.transition.transform.origin-top-right.md:hidden {
          x-show="open"
          style="display: none;"
          x-transition:enter="duration-150 ease-out"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="duration-100 ease-in"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
        }
          .rounded-lg.shadow-md.bg-white.ring-1.ring-black.ring-opacity-5.overflow-hidden
            .px-5.pt-4.flex.items-center.justify-between
              div
                = image_tag "foodi-logo.svg", class: "h-8 w-auto", alt: "Foodi"
              .-mr-2
                button.bg-white.rounded-md.p-2.inline-flex.items-center.justify-center.text-gray-400.hover:text-gray-500.hover:bg-gray-100.focus:outline-none.focus:ring-2.focus:ring-inset.focus:ring-foodi-500 type="button" @click="open = false"
                  span.sr-only Close main menu
                  = fa_icon "times", weight: "fa-solid", class: "h-6 w-6 fa-xl fa-fw"
            .px-2.pt-2.pb-3.space-y-1
              = link_to "Features", "#", class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50"
              = link_to "Pricing", "#", class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50"
            = link_to "Sign in", "#", class: "block w-full px-5 py-3 text-center font-medium text-foodi-600 bg-gray-50 hover:bg-gray-100"
